{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2016", "es2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./web",
    "allowJs": true,
    "paths": {
      "@comfy-main-web/*": ["../../web/*"]
    }
  },
  "include": ["./web/**/*", "web/"],
  "exclude": ["node_modules", "../../web/scripts"]
}
